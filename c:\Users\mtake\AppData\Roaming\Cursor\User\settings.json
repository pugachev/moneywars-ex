{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/node_modules": true,
        "**/.next": true,
        "**/.cache": true,
        "**/dist": true,
        "**/build": true,
        "**/.env": true,
        "**/coverage": true,
        "**/.idea": true,
        "**/.vscode": false,
        "**/vendor": true
    },
    "window.commandCenter": 1,
    "cursor.cpp.disabledLanguages": [
        "plaintext",
        "markdown",
        "scminput"
    ],
    "github.copilot.enable": {
        "plaintext": true,
        "markdown": true,
        "scminput": true
    },
    "github.copilot.advanced": {},
    "editor.codeActionsOnSave": {
        
    },
    "github.copilot.editor.enableCodeActions": true,
    "github.copilot.chat.localeOverride": "auto",
    "github.copilot.renameSuggestions.triggerAutomatically": true,
    "github.copilot.chat.codeGeneration.useInstructionFiles": true,
    "github.copilot.chat.debug.command.enabled": true,
    "github.copilot.chat.font.size": 14,
    "github.copilot.chat.font.family": "Meiryo, メイリオ,Consolas, 'Courier New', monospace",
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.fontFamily": "JetBrains Mono, Cascadia Code, UDEV Gothic NF, HackGen Console NF, Ricty Diminished, Source Code Pro, Consolas",
    "terminal.integrated.lineHeight": 1.2,
    "terminal.integrated.fontWeight": "normal",
    "terminal.integrated.letterSpacing": 0.5,
    "workbench.tree.indent": 20,
    "tree.indent": 20,
    "editor.fontSize": 14,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.colorCustomizations": {
        "tree.indentGuidesStroke": "#505050"
    },
    "terminal.integrated.cursorStyle": "underline",
    "terminal.integrated.cursorWidth": 2,
    "terminal.integrated.cursorBlinking": true
} 